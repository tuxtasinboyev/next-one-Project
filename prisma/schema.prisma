generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Region {
  id        Int        @id @default(autoincrement())
  name      String
  districts District[]
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  regionId   Int
  districtId Int
  villageId  Int
  createdAt  DateTime @default(now())
}

model District {
  id       Int       @id @default(autoincrement())
  name     String
  regionId Int
  region   Region    @relation(fields: [regionId], references: [id])
  villages Village[]
}

model Village {
  id         Int      @id @default(autoincrement())
  name       String
  districtId Int
  district   District @relation(fields: [districtId], references: [id])
}
